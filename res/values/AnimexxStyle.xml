<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="custom_theme_color">#E8E8FF</color>
    <color name="header_bg">#5858FF</color>

    <style name="AnimexxStyle" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:buttonStyle">@style/ButtonText</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>

    <style name="ButtonText" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/mexx_button</item>
    </style>

    <style name="ButtonImage" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/mexx_button</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/custom_theme_color</item>
        <item name="android:bottomDark">@color/custom_theme_color</item>
        <item name="android:bottomMedium">@color/custom_theme_color</item>
        <item name="android:centerBright">@color/custom_theme_color</item>
        <item name="android:centerDark">@color/custom_theme_color</item>
        <item name="android:centerMedium">@color/custom_theme_color</item>
        <item name="android:fullBright">@color/custom_theme_color</item>
        <item name="android:fullDark">@color/custom_theme_color</item>
        <item name="android:topBright">@color/header_bg</item>
        <item name="android:topDark">@color/header_bg</item>
    </style>

</resources>